{
  "name": "Music Timer",
  "description": "A timer used to calculate working hours.",
  "version": "1.0.0",
  "manifest_version": 3,
    "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/chronometer.png",
      "32": "/images/chronometer.png",
      "48": "/images/chronometer.png",
      "128": "/images/chronometer.png"
    }
  },
  "icons": {
    "16": "/images/chronometer.png",
    "32": "/images/chronometer.png",
    "48": "/images/chronometer.png",
    "128": "/images/chronometer.png"
  }

}